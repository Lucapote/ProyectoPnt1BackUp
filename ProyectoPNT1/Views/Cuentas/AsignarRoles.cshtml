@model ProyectoPNT1.ViewModel.AsignarRoles

@{
    ViewData["Title"] = "Asignar Roles";
}

<h1>Asignar Roles</h1>

<form asp-action="AsignarRoles" method="post">
    <div class="form-group">
        <label asp-for="UsuarioId">Usuario:</label>
        <select asp-for="UsuarioId" asp-items="@Model.Usuarios" class="form-control"></select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rol">Rol:</label>
        <select asp-for="Rol" asp-items="@Model.Roles" class="form-control"></select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>