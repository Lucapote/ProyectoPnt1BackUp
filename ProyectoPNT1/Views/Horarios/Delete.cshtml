@using ProyectoPNT1.Recursos;
@model ProyectoPNT1.Models.Horario

@{
    ViewData["Title"] = Nombres.Borrar;
}

<h1>@Nombres.Borrar</h1>

<h3>@Nombres.Confirmar</h3>
<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaTrabajo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaTrabajo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraEntrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraEntrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraSalida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraSalida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tecnico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tecnico.Apellido)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Nombres.Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">@Nombres.Volver</a>
    </form>
</div>
